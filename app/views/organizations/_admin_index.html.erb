<% content_for :title, " / Manage Organizations" %>

<div class="container container-fluid">

  <div class="container-fluid container-md">
    <h5>Create an Organization</h5>
    <div class="card">
      <div class="card-body">
        <form class="form-horizontal">
          <fieldset>
            <div class="form-group">
              <label for="name" class="col-sm-2 control-label">Organization Name: </label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group">
              <label for="name" class="col-sm-2 control-label">Contact Email: </label>
              <div class="col-sm-10">
                <input type="email" class="form-control" name="email">
              </div>
            </div>
          </fieldset>
          <fieldset>
            <div class="form-group">
              <label for="name" class="col-sm-2 control-label">Organization Description: </label>
              <div class="col-sm-10">
                <textarea class="form-control" name="description" rows="4" style="resize:none"></textarea>
              </div>
            </div>
          </fieldset>
          <div class="form-group">
            <div class="col-sm-12">
              <button class="mb-sm btn btn-primary btn-block ripple">Create Organization</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>