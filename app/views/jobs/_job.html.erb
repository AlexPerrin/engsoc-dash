<tr>
  <td><%= link_to job.title.titleize, job_path(:id => job.id) %></td>
  <% if job.user %>
    <td><%= job.user.first_name %> <%= job.user.last_name %></td>
    <td><%= job.user.email %></td>
    <td>
      <% if job.role == "management" %>
        Managerial Position
      <% elsif job.role == "admin" %>
        Administration Position
      <% elsif job.role == "regular" %>
        General Member Position
      <% end %>
    </td>
    <td>
      <%= job.job_type.titleize %>
    </td>
    <% else %>
    <td>
      <% if job.job_posting.present? %>
        <%= link_to "View Job Posting", job_posting_path(JobPosting.find_by(job_id: job.id)) %>
      <% else %>
        Vacant Position
      <% end %>
    </td>
    <td></td>
    <td>
      <% if job.role == "management" %>
        Managerial Position
      <% elsif job.role == "admin" %>
        Administration Position
      <% elsif job.role == "regular" %>
        General Member Position
      <% end %>
    </td>
    <td>
      <%= job.job_type.titleize %>
    </td>

  <% end %>
  <% if can? :manage, job %>
    <td>
      <% if job.job_posting.present? %>
      <%= link_to edit_job_path(job.id), class: "btn btn-sm btn-primary" do %>
        <em class="ion-ios-list"></em>
      <% end %>
      <% end %>
      <%= link_to edit_job_path(job.id), class: "btn btn-sm btn-warning" do %>
        <em class="ion-edit"></em>
      <% end %>
      <%= link_to job, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger"  do %>
        <em class="ion-trash-a"></em>
      <% end %>
    </td>
  <% end %>
</tr>
