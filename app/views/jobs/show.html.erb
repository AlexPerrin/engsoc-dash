
<% content_for :title, "Job Information" %>

<div class="container container-lg">


<div class="card">
  <div class="card-body">
    <!-- render the dropdown-->
    <%= render 'job_dropdown', job: @job %>

    <p class="lead"><%= link_to @job.title, job_path(:id => @job.id) %></p>
    <hr />
    <p>
      Organization: <%= link_to @organization.name, @organization %>
    </p>
    <p>
      Job Type: <%= @job.job_type.titleize %>
    </p>
    <p>
      Role: <%= @job.role.titleize %>
    </p>
    <p>
      <%= simple_format(@job.description) %>
    </p>
  </div>
</div>

<div class="card">
    <div class="card-body">
      <% if !@job.user %>
        <% if @job.job_posting.present? %>
          <%= link_to 'View Job Posting', job_posting_path(id: @job.job_posting.id), class: "btn btn-primary pull-right" %>
        <% else %>
          <% if can? :manage, @job %>
            <%= link_to 'Create Job Posting', new_job_posting_path(job_id: job.id), class: "btn btn-primary pull-right" %>
          <% end %>
        <% end %>
      <% end %>
      <p class="lead">Position History</p>
      <div class="row" id="users">
          <%= render "users_table" %>
      </div>
    </div>
  </div>
</div>
