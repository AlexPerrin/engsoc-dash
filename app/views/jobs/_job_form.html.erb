        <%= form_for([@organization, @job]) do |f| %>

          <%= render 'shared/job_error_messages' %>

          <%= f.label :Title %>
          <%= f.text_field :title, class: 'form-control' %>

          <%= f.label :Description %>
          <%= f.text_area :description, class: 'form-control', style: 'resize:none' %>

          <% if defined? @job.organization.id %>
            <%= f.hidden_field :organization_id, :value => @job.organization.id %>
          <% else %>
            <%= f.hidden_field :organization_id, :value => @organization.id %>
          <% end %>

          <%= f.label :Role %>
          <%= f.select :role, Job.roles.keys.map { |w| [w.humanize, w] }  %>

          <br />
          <%= f.label :job_type %>
          <%= f.select :job_type, Job.job_types.keys.map { |w| [w.humanize, w] }  %>

          <hr>

          <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
        <% end %>
