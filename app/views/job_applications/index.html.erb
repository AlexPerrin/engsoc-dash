<% content_for :title, @job_posting.title + " Applications" %>

<div class="container-fluid container-md">

  <div class="container-fluid container-md">
    <h3>Job Applications for <%= @job_posting.title %> </h3>
    <div class="card">
      <div class="card-body">
        <table>
          <thead>
            <tr>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @job_posting.job_applications.each do |job_application| %>
              <tr>
                <td><%= link_to 'Show', job_application %></td>
                <td><%= link_to 'Edit', edit_job_application_path(job_application) %></td>
                <td><%= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Job Application', new_job_posting_job_application_path %>
      </div>
    </div>
  </div>
</div>