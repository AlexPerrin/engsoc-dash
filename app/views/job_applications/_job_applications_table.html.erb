
<% if @job_applications %>
  <div class="table-responsive ml mr">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-1">
            APP. ID
          </th>
          <th>
            SUBMITTED BY <abbr title="Hover to show submission time"><em class="ion-help-circled icon-fw"></em></abbr>
          </th>
          <th>
            STATUS
          </th>
          <% if can? :manage, JobApplication %>
          <th>
            ACTIONS
          </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render @job_applications %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning ml mr">
    There are currently no jobs in this organization.
  </div>
<% end %>
