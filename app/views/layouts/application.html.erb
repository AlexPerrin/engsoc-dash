<!DOCTYPE html>
<html lang="en">
  <!-- header -->
  <head>
    <title><%= yield(:title) %> - Engineering Society Dashboard</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <!-- body -->
  <% if user_signed_in? %>
      <body class="theme-6">
        <div class="layout-container">
          <!-- render the header -->
          <%= render 'layouts/header' %>
          <!-- render the side navigation menu -->
          <%= render 'layouts/sidenav' %>
          <!-- main section -->
          <main class="main-container">
            <section>
                <!-- show flash messages if there are any -->
                <% flash.each do |key, value| %>
                  <% if key == 'notice' %>
                    <%= content_tag :div, value, class: "mt mr ml alert alert-success" %>
                  <% elsif key == 'alert' %>
                    <%= content_tag :div, value, class: "mt mr ml alert alert-warning" %>
                  <% else %>
                    <%= content_tag :div, value, class: "mt mr ml alert alert-#{key}" %>
                  <% end %>
                <% end %>
                <!-- yield page content -->
                <%= yield %>
            </section>
            <!-- render the footer of the page -->
            <%= render 'layouts/footer' %>
          </main>
        </div>
      </body>
  <% else %>
    <body>
      <%= yield %>
    </body>
  <% end %>
</html>
