<!-- side navigation bar container -->
<aside class="sidebar-container">
  <!-- side navigation bar content -->
  <div class="sidebar-content">
    <!-- side navigation header -->
    <div class="sidebar-toolbar text-center"><a href=""><%= image_tag "centric/user/01.jpg", class: "img-circle thumb64" %></a>
      <div class="mt"><%= current_user.first_name %> <%= current_user.last_name %></div>
    </div>
    <!-- side navigation -->
    <nav class="sidebar-nav">
      <ul>
        <!-- dashboard link -->
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to root_path, class: "ripple" do %>
            <span class="nav-icon"><em class="ion-home icon-fw"></em></span><span>Home</span>
          <% end %>
        </li>
        <!-- orgs link -->
        <li class="<%= 'active' if (controller.controller_name.eql?('organizations')) %>">
          <a href="#" class="ripple"><span class="pull-right nav-caret"><em class="ion-ios-arrow-right"></em></span><span class="pull-right nav-label"></span><span class="nav-icon"><em class="ion-person-stalker icon-fw"></em></span><span>Organizations</span></a>
          <ul class="sidebar-subnav">
            <li class="<%= 'active' if (controller.controller_name.eql?('organizations')) && (controller.action_name.eql?('index')) %>">
              <%= link_to organizations_path, class: "ripple" do %>
                <span class="pull-right nav-label"></span><span>View All</span>
              <% end %>
            </li>
            <li class="<%= 'active' if (controller.controller_name.eql?('organizations')) && (controller.action_name.eql?('user_organizations')) %>">
              <%= link_to user_organizations_path, class: "ripple" do %>
                <span class="pull-right nav-label"></span><span>My Organizations</span>
              <% end %>
            </li>
            <% if can? :manage, Organization %>
            <li class="dropdown-header">
              Admin
            </li>
            <li class="<%= 'active' if (controller.controller_name.eql?('organizations')) && (controller.action_name.eql?('new')) %>">
              <%= link_to new_organization_path, class: "ripple" do %>
                <span class="pull-right nav-label"></span><span>New Organization</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </li>
        <!-- jobs link -->
        <li class="<%= 'active' if ( (controller.controller_name.eql?('job_postings')) || (controller.controller_name.eql?('job_applications')) ) %>">
          <a href="#" class="ripple"><span class="pull-right nav-caret"><em class="ion-ios-arrow-right"></em></span><span class="pull-right nav-label"></span><span class="nav-icon"><em class="ion-briefcase icon-fw"></em></span><span>Jobs</span></a>
          <ul class="sidebar-subnav">
            <li class="<%= 'active' if (controller.controller_name.eql?('job_postings')) && (controller.action_name.eql?('index')) %>">
              <%= link_to job_postings_path, class: "ripple" do %>
                <span class="pull-right nav-label"></span><span>View Open Jobs</span>
              <% end %>
            </li>
            <li>
              <%= link_to job_postings_path, class: "ripple" do %>
                <span class="pull-right nav-label"></span><span>My Applications</span>
              <% end %>
            </li>
            <% if can? :create, JobPosting %>
            <li class="dropdown-header">
              Admin
            </li>
            <li class="<%= 'active' if (controller.controller_name.eql?('job_postings')) && (controller.action_name.eql?('new')) %>">
              <%= link_to new_job_posting_path, class:"ripple" do %>
                <span class="pull-right nav-label"></span><span>New Job Posting</span>
              <% end %>
            </li>
            <% end %>
            <% if can? :manage, JobPosting %>
            <li class="<%= 'active' if (controller.controller_name.eql?('job_postings')) && (controller.action_name.eql?('manage')) %>">
              <%= link_to manage_job_postings_path, class:"ripple" do %>
                <span class="pull-right nav-label"></span><span>Manage Postings</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</aside>
<div class="sidebar-layout-obfuscator"></div>