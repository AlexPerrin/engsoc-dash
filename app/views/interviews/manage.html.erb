<% content_for :title, "Manage Job Interviews" %>
<div class="container-md container-fluid">

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= month_calendar events: @interviews do |date, interviews| %>
            <%= date %>

            <% interviews.each do |interview| %>
              <div>
                <%= interview.name %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body"> 
          <table>
            <thead>
              <tr>
                <th>Job posting</th>
                <th>Start time</th>
                <th>End time</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @interviews.each do |interview| %>
                <tr>
                  <td><%= interview.job_posting %></td>
                  <td><%= interview.start_time %></td>
                  <td><%= interview.end_time %></td>
                  <td><%= link_to 'Show', interview %></td>
                  <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
                  <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Interview', new_interview_path %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <h4>Schedule Job Interviews</h4>
          <!-- list of job postings -->
          <div class="card">
            <div class="card-body">
              <ul class="list-group">
                <% if @interviewing_postings.any? %>
                  <% @interviewing_postings.each do |posting| %>
                    <%= render 'job_postings/job_posting_interview_select_list_item', posting: posting %>
                  <% end %>
                <% else %>
                  <br /><br />
                  <p class="lead text-center">No Job Postings that are Interviewing</p>
                <% end %>
              </ul>
            </div>

            <% if @interviewing_postings.count > 9 %>
              <!-- show the paginator for the will_paginate gem -->
              <center><%= will_paginate @open_job_postings, renderer: BootstrapPagination::Rails, page_links: false %><br /></center>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>