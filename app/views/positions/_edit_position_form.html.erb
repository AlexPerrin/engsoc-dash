
<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <a data-toggle="collapse" href="#<%= pos.id %>" class="link-unstyled">
        <div class="panel-title text-thin">
          <%= pos.user.first_name %> <%= pos.user.last_name %>
          <br>
          <%= pos.start_date.to_date %> - <%= pos.end_date.to_date %>
        </div>
      </a>
    </div>
    <div id="<%= pos.id %>" class="panel-collapse collapse">
      <%= form_for pos, :method => :PUT do |f| %>

        <%= f.hidden_field :id, :value => pos.id %>
        <p class="m">Edit: <%= pos.user.first_name %> <%= pos.user.last_name %>'s <%= pos.job.title %> position</p>
        <div class=" row form-group m">
          <div class="col-md-10 mb">
            <%= f.label :start_date %>
            <%= f.date_select :start_date, value: pos.start_date, placeholder: pos.start_date, class: 'form-control' %>
          </div>
          <div class="col-md-10 mb">
            <%= f.label :end_date %>
            <%= f.date_select :end_date, value: pos.start_date, placeholder: pos.start_date, class: 'form-control' %>
          </div>
          <div class="col-md-2 mb text-right">
            <%= button_tag class: "btn btn-sm btn-success", :"data-toggle" => "popover", :"data-content" => "Save", :"data-trigger" => "hover", :"data-placement" => "bottom" do %>
              <em class="ion-checkmark icon-fw"></em>
            <% end %>
            <%= link_to position_path(pos), method: :delete, data: { confirm: "Are you sure? This really, really cannot be undone. Positions rarely need to be deleted, if ever." }, class: "btn btn-sm btn-danger", :"data-toggle" => "popover", :"data-content" => "Delete", :"data-trigger" => "hover", :"data-placement" => "bottom" do %>
              <em class="ion-trash-a icon-fw"></em>
            <% end %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
