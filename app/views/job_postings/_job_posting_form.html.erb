        <%= form_for @jobposting do |f| %>

          <%= render 'shared/job_posting_error_messages' %>

          <%= f.hidden_field :creator_id, :value => current_user.id %>

          <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="form-group">
          <%= f.label :Description %>
          <%= f.text_area :description, class: 'form-control', style: 'resize:none', rows: "20" %>
          </div>

          <!-- Should add an organization check for current user (so that user can only add job postings for orgs they are able to manage), if they are only managers -->
          <div class="form-group">
          <%= f.label :Job %>
          <%= f.select :job_id, Organization.all.collect {|x| [x.name, x.id]}, { class: 'form-control' } %>
          </div>

          <hr>

          <div class="form-group">
          <%= f.label :Deadline %>
          <%= f.date_select :deadline, "data-provide" => 'datepicker' %>
          </div>

          <div class="form-group">
          <%= f.label :Status %>
          <% if cannot? :manage, JobPosting %>
          <%= f.select :status, JobPosting.statuses => "Waiting approval" %>
          <% else %>
          <%= f.select :status, JobPosting.statuses.keys.map { |w| [w.humanize, w] }  %>
          <% end %>
          </div>

          <hr>

          <h4>Job Posting Questions</h4>
          <% if @jobposting.job_posting_questions.any? %>
            Currently <%= @jobposting.job_posting_questions.count %> <%= 'question'.pluralize(@jobposting.job_posting_questions.count) %>.
          <% else %>
            Currently no questions. You can add questions once you first create the job posting.
          <% end %>

          <hr>

          <%= f.submit "Next", class: "btn btn-primary btn-block" %>
        <% end %>